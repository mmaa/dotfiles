### ShippingEasy

# Always use agent forwarding when connecting to bastions
Host *-bastion.aws.seadmin.com
  ForwardAgent yes
  HostKeyAlias shippingeasy-bastions
  StrictHostKeyChecking yes
  UserKnownHostsFile ~/.ssh/known_hosts

# Environments
Host *.production-*.*.aws.seadmin.com
  ProxyJump production-bastion.aws.seadmin.com

Host *.staging-*.*.aws.seadmin.com
  ProxyJump staging-bastion.aws.seadmin.com

Host *.slush-staging.*.aws.seadmin.com
  ProxyJump slush-staging-bastion.aws.seadmin.com

Host *.slush-master.*.aws.seadmin.com
  ProxyJump slush-master-bastion.aws.seadmin.com

# Defaults
Host *aws.seadmin.com
  User macosta
  StrictHostKeyChecking no

  # Do not verify/store host keys for cloud instances
  UserKnownHostsFile /dev/null

  # Suppress "Permanently added <host>" warning on every connection caused by
  # preceding line
  LogLevel error

